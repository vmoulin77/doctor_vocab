<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vincent.moulin.vocab"
    android:versionCode="11"
    android:versionName="3.3.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:name="vincent.moulin.vocab.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vincent.moulin.vocab.activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vincent.moulin.vocab.activities.TrainingActivity"
            android:label="@string/training_activity_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="vincent.moulin.vocab.activities.StatActivity"
            android:label="@string/stat_activity_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="vincent.moulin.vocab.activities.PhoneticRulesActivity"
            android:label="@string/phonetic_rules_activity_title" >
        </activity>
    </application>

</manifest>
